{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  commitBody: 'Signed-off-by: Pyrra renovatebot <renoavte@pyrra.dev>',
  extends: [
    'config:recommended',
    'github>prometheus-community/helm-charts//renovate.json',
  ],
  packageRules: [
    {
      matchManagers: ['github-actions'],
      automerge: true,
    },
    {
      matchPackageNames: ['helm/helm', 'helm/chart-testing', 'python/cpython'],
      automerge: true,
    },
    {
      matchPackageNames: ['kindest/node'],
      matchUpdateTypes: ['patch'],
      automerge: true,
    },
  ],
}
